{
  "name": "make-the-change",
  "version": "0.1.0",
  "description": "Plateforme d'investissement biodiversité avec récompenses tangibles",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Bartosz Krynski",
    "email": "bartosz@make-the-change.com"
  },
  "keywords": [
    "biodiversity",
    "investment",
    "sustainability",
    "rewards",
    "monorepo"
  ],
  "scripts": {
    "build": "turbo build --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "dev": "turbo dev --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "lint": "pnpm guard:no-sql && pnpm guard:no-hardcoded-colors && turbo lint --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "type-check": "pnpm guard:no-sql && pnpm guard:no-hardcoded-colors && turbo type-check --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "guard:no-sql": "node ./tools/guard-no-sql.mjs",
    "guard:no-hardcoded-colors": "node ./tools/guard-no-hardcoded-marketing-colors.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.10.2",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/web",
    "apps/web-client",
    "packages/core"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/leaflet": "^1.9.20",
    "leaflet": "^1.9.4",
    "react-leaflet": "^5.0.0"
  }
}
