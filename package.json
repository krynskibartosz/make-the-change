{
  "name": "make-the-change",
  "version": "0.1.0",
  "description": "Plateforme d'investissement biodiversité avec récompenses tangibles",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Bartosz Krynski",
    "email": "bartosz@make-the-change.com"
  },
  "keywords": [
    "biodiversity",
    "investment",
    "sustainability",
    "rewards",
    "monorepo"
  ],
  "scripts": {
    "build": "turbo build --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "dev": "turbo dev --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "lint": "pnpm guard:no-sql && pnpm guard:no-hardcoded-colors && pnpm guard:ui && turbo lint --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "type-check": "pnpm guard:no-sql && pnpm guard:no-hardcoded-colors && pnpm guard:ui && turbo type-check --filter=@make-the-change/web --filter=@make-the-change/web-client",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "guard:no-sql": "node ./tools/guard-no-sql.mjs",
    "guard:no-hardcoded-colors": "node ./tools/guard-no-hardcoded-marketing-colors.mjs",
    "guard:ui:base-contract": "node ./tools/guard-core-ui-base-contract.mjs",
    "guard:ui:no-direct-base-imports": "node ./tools/guard-no-direct-base-ui-in-apps.mjs",
    "guard:ui:usage-coverage": "node ./tools/guard-base-ui-usage-coverage.mjs",
    "guard:ui:production-coverage": "node ./tools/guard-base-ui-production-coverage.mjs",
    "guard:ui:core:no-direct-base-outside-base": "node ./tools/guard-core-ui-no-direct-base-primitives-outside-base.mjs",
    "guard:ui:core:no-raw-interactives": "node ./tools/guard-core-ui-no-raw-interactives.mjs",
    "guard:ui": "pnpm guard:ui:base-contract && pnpm guard:ui:no-direct-base-imports && pnpm guard:ui:usage-coverage && pnpm guard:ui:production-coverage && pnpm guard:ui:core:no-direct-base-outside-base && pnpm guard:ui:core:no-raw-interactives",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.10.2",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/web",
    "apps/web-client",
    "packages/core"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/leaflet": "^1.9.20",
    "leaflet": "^1.9.4",
    "react-leaflet": "^5.0.0"
  }
}
