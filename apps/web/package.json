{
  "name": "@make-the-change/web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "next build --turbo",
    "dev": "next dev --turbo",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "typegen": "next typegen",
    "build:analyze": "ANALYZE=true next build --turbo",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run test/unit",
    "test:integration": "vitest --run test/integration",
    "test:e2e": "playwright test",
    "test:ci": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "test:unit:ui": "vitest --ui test/unit",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:tdd": "playwright test test/e2e/admin-subscriptions.spec.ts --headed --workers=1",
    "test:tdd:watch": "./scripts/tdd-dev.sh watch",
    "tdd:setup": "./scripts/tdd-dev.sh setup",
    "tdd:seed": "./scripts/tdd-dev.sh seed",
    "tdd:clean": "./scripts/tdd-dev.sh clean",
    "tdd:reset": "./scripts/tdd-dev.sh reset"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.6.0",
    "@make-the-change/core": "workspace:*",
    "@nivo/bar": "^0.99.0",
    "@nivo/calendar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.85.6",
    "@tanstack/react-query-devtools": "^5.85.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dnd-kit": "^0.0.2",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.23.12",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.542.0",
    "next": "16.1.0",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.52.2",
    "react-leaflet": "^5.0.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.4",
    "jsdom": "^25.0.1",
    "msw": "^2.6.5",
    "playwright": "^1.49.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
