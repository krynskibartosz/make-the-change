{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!!**/next-env.d.ts",
      "!!**/node_modules",
      "!!**/.next",
      "!!**/dist",
      "!!**/.expo",
      "!!apps/mobile/**",
      "!!apps/mobile-clean/**",
      "!!apps/mobile-sdk55/**",
      "!!**/EXAMPLE_USER_DETAIL.tsx"
    ]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "error",
        "useParseIntRadix": "off",
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "performance": {
        "noImgElement": "off"
      },
      "complexity": {
        "noUselessFragments": "off",
        "useLiteralKeys": "off",
        "useOptionalChain": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useTemplate": "off",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noLabelWithoutControl": "off",
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "off",
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off",
        "noRedundantRoles": "off",
        "noRedundantAlt": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["apps/web/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          },
          "correctness": {
            "useExhaustiveDependencies": "warn"
          }
        }
      }
    }
  ]
}
